@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Register</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--===============================================================================================-->
	<!--<link rel="icon" type="image/png" href="images/icons/favicon.ico"/>
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/css/dist/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<!--===============================================================================================-->
</head>
<body>

	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="https://dewey.tailorbrands.com/production/brand_version_mockup_image/121/7767614121_a8207d12-1307-47cf-800f-6e491222498a.png?cb=1662594150" alt="IMG">
				</div>

				<form class="login100-form validate-form" id="account" method="post">
					<span class="login100-form-title">
						GAMMA-FEST
					</span>

					<span class="login100-form-title">
						Creación de cuenta
					</span>

					<div class="wrap-input100 validate-input">
						<input asp-for="Input.Nombres" class="input100" autocomplete="username" aria-required="true" placeholder="Nombres" />
						<span asp-validation-for="Input.Nombres"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input">
						<input asp-for="Input.Apellidos" class="input100" autocomplete="username" aria-required="true" placeholder="Apellidos:" />
						<span asp-validation-for="Input.Apellidos"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input">
						<input asp-for="Input.Email" class="input100" aria-required="true" placeholder="Correo Electrónico:" />
						<span asp-validation-for="Input.Email"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>


					<div class="wrap-input100 validate-input">
						<input asp-for="Input.Password" class="input100" aria-required="true" placeholder="Password" />
						<span asp-validation-for="Input.Password"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input">
						<input asp-for="Input.ConfirmPassword" class="input100" aria-required="true" placeholder="Password" />
						<span asp-validation-for="Input.ConfirmPassword"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>

					<div class="container-login100-form-btn">
						<button class="login100-form-btn" id="registerSubmit" type="submit">
							Registrar Datos
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}