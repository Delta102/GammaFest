@model GAMMAFEST.Models.GenerateQRCodeModel

@{
    ViewData["Title"] = "CreateQRCode";
}
<h1>CreateQRCode</h1>
<h1>@ViewBag.idtempvar</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Qr">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QRCodeText" class="control-label"></label>
                <input asp-for="QRCodeText" class="form-control" value="@ViewBag.text"/>
                <span asp-validation-for="QRCodeText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="IdUsuario" class="form-control" value="@ViewBag.idUser" />
            </div>
            <div class="form-group">
                <input type="submit" value="Generate QR Code" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <img src="@ViewBag.QrCodeUri" class="img-thumbnail" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }